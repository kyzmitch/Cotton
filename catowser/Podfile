# Uncomment the next line to define a global platform for your project
platform :ios, '11.0'
# source 'https://github.com/100mango/SwiftCssParser.git'

target 'Cotton' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Cotton
  pod 'ReactiveSwift', '~> 6.0.0'
  pod 'SwiftLint'
end

target 'CoreBrowser' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for CoreBrowser
  pod 'ReactiveSwift', '~> 6.0.0'
  pod 'SwiftLint'
end

target 'JSPlugins' do
  use_frameworks!

  pod 'SwiftSoup'
  # pod 'SwiftCssParser'
  pod 'SwiftLint'
  pod 'ReactiveSwift', '~> 6.0.0'
end

target 'JSPluginsTests' do
  use_frameworks!

# Probably it is not right way of fixing
# unit tests only should require main framework 
# as a dependency which is JSPlugins.framework
  pod 'ReactiveSwift', '~> 6.0.0'
  pod 'SWXMLHash', '~> 5.0.0'
  pod 'SwiftLint'
  pod 'SwiftSoup'
end

target 'HttpKit' do
  use_frameworks!

  pod 'ReactiveSwift', '~> 6.0.0'
  pod 'SwiftLint'
end

target 'BrowserNetworking' do
  use_frameworks!

  pod 'ReactiveSwift', '~> 6.0.0'
  pod 'SWXMLHash', '~> 5.0.0'
end
